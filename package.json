{
  "name": "nuxt-ts",
  "version": "0.1.0",
  "description": "My swell Nuxt.js project",
  "author": "m-mitsuhide",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:client": "nuxt-ts",
    "dev:api": "aspida --watch",
    "dev:mock": "axios-mock-server --watch",
    "generate": "npm run build:api && nuxt-ts generate",
    "build:api": "aspida --build",
    "lint": "npm run lint:script && npm run lint:style",
    "lint:script": "eslint --ext .ts,.js,.vue --ignore-path .gitignore .",
    "lint:style": "stylelint \"assets/**/*.css\" \"{components,layouts,pages}/**/*.vue\"",
    "lint:fix": "npm run lint:script -- --fix && npm run lint:style -- --fix",
    "typecheck": "tsc --noEmit"
  },
  "browserslist": [
    "last 2 version",
    "IE 11"
  ],
  "lint-staged": {
    "*.{js,ts,vue}": "eslint",
    "*.{css,vue}": "stylelint"
  },
  "prettier": {
    "semi": false,
    "arrowParens": "always",
    "singleQuote": true
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ]
  },
  "dependencies": {
    "@nuxt/typescript-runtime": "^0.2.10",
    "@nuxtjs/axios": "^5.9.5",
    "aspida": "^0.2.0",
    "nuxt": "^2.11.0",
    "nuxt-property-decorator": "^2.5.1",
    "vuex-class-component": "^2.2.1"
  },
  "devDependencies": {
    "@nuxt/typescript-build": "^0.3.10",
    "@nuxtjs/eslint-config-typescript": "^0.1.3",
    "@nuxtjs/eslint-module": "^1.1.0",
    "@nuxtjs/stylelint-module": "^3.2.2",
    "@types/faker": "^4.1.10",
    "axios-mock-server": "^0.13.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-nuxt": "^0.5.1",
    "eslint-plugin-prettier": "^3.1.2",
    "faker": "^4.1.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "stylelint": "^11.1.1",
    "stylelint-config-prettier": "^6.0.0",
    "stylelint-config-standard": "^19.0.0"
  }
}
